@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>We Are Floream</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css"/>
    <link href="/content/css/floream.css" rel="stylesheet"/>
    <link href="/content/css/font-awesome.min.css" rel="stylesheet" />
    <script src="/content/js/jquery.min.js"></script>
    <script src="/content/js/bootstrap.min.js"></script>
    <script src="/content/js/jquery.lazyload.min.js"></script>
    <script src="/content/js/jquery.mixitup.min.js"></script>
    <script src="/content/js/script.js"></script>
</head>
<body>   
    <header class="header">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">
                    <img src="/content/images/logo.png" alt="We are Floream" />
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @if (Context.CurrentUser == null)
                        {
                            <a href="/login">Login</a>
                        }
                        else
                        {
                            <a href="/logoff">Logoff</a>
                        }
                    </li>
                    <li>
                        <a href="/profile">Profile</a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>
    <section>
        @RenderBody()
    </section>
    <footer class="footer">
        <div class="text-center">
            &copy; 2016 - Floream
        </div>
    </footer>
</body>
</html>

